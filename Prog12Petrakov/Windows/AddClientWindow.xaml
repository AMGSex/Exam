<Window x:Class="Prog12Petrakov.Windows.AddClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prog12Petrakov.Windows"
        mc:Ignorable="d"
        Title="Добавление клиента" Height="250" Width="500">
    <Grid>
        <StackPanel>
            <TextBlock Text="Имя клиента" Margin="20" FontSize="18"/>
            <TextBox x:Name="TxtName" Width="250" Height="25" Margin="20" FontSize="18" HorizontalAlignment="Left"/>
            <Button x:Name="BtnAddClient" Content="Добавить клиента" Width="250" Height="30" Margin="20" FontSize="18" HorizontalAlignment="Left" Click="BtnAddClient_Click"/>
        </StackPanel>
    </Grid>
</Window>
